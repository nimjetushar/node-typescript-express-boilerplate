{
  "name": "node-typescript-express-boilerplate",
  "version": "0.3.0",
  "description": "boilerplate for node-express with typescript",
  "main": "dist",
  "scripts": {
    "start": "node dist",
    "prestart": "npm run -s build-ts",
    "build": "npm run build-ts",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run build-ts:watch\" \"npm run node-watch\"",
    "debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run build-ts:watch\" \"npm run node-debug\"",
    "build-ts": "tsc",
    "build-ts:watch": "tsc -w",
    "node-watch": "nodemon dist",
    "node-debug": "nodemon --inspect dist"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.5.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "author": "Tushar Nimje",
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.13.3",
    "compression": "1.5.2",
    "cors": "2.7.1",
    "express": "4.13.3",
    "mongoose": "5.2.14",
    "morgan": "1.8.0"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0",
    "@babel/core": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0",
    "@babel/preset-env": "7.0.0",
    "@babel/preset-typescript": "7.0.0",
    "@types/cors": "2.8.4",
    "@types/express": "4.16.0",
    "@types/mongoose": "5.2.13",
    "@types/morgan": "1.7.35",
    "concurrently": "3.5.1",
    "eslint": "5.6.1",
    "nodemon": "1.9.2",
    "typescript": "3.0.1"
  }
}
